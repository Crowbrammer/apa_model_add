

ScreenManagement:

	ModelAddScreen

<ModelAddScreen>:

	name: 'ScreenTemplateScreen'
	PrimaryOverlay

<PrimaryOverlay>:

	ModelAddLayout

<ModelAddLayout>:

	orientation: 'vertical'
	spacing: 20

	BoxLayout:

		orientation: 'vertical'
		padding: 20, 20
		spacing: 10

		Label:
			id: title_label
			text: 'Model Add Screen'
			font_size: '30dp'
			# text_size: '15dp'

		TextInput:
			id: model_add_name
			text: 'Add your model name here'
			multiline: False

		Button:
			id: num_positions
			text: '# of positions'

		Button:
			id: add_model_confirm
			text: 'Add Model'
			font_size: '30dp'
			on_release: root.record_new_model()

	AppWideHUD

<AppWideHUD>

	size_hint_y: None
	height: '40dp'
	Button:
		id: feedback_button
		text: 'Spch Bubble'

	Button:
		id: home_button
		text: 'Home'
